<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthorizationUserFilter</filter-name>
        <filter-class>filters.AuthorizationUserFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthorizationAdminFilter</filter-name>
        <filter-class>filters.AuthorizationAdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationAdminFilter</filter-name>
        <servlet-name>CategoryServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationAdminFilter</filter-name>
        <servlet-name>ManageAdminServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationAdminFilter</filter-name>
        <servlet-name>adminMenuServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationUserFilter</filter-name>
        <servlet-name>UserMenu</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationUserFilter</filter-name>
        <servlet-name>ItemServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationUserFilter</filter-name>
        <servlet-name>ManageUserAccServlet</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserMenu</servlet-name>
        <servlet-class>servlets.UserMenuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminMenuServlet</servlet-name>
        <servlet-class>servlets.AdminMenuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageAdminServlet</servlet-name>
        <servlet-class>servlets.ManageAdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageUserAccServlet</servlet-name>
        <servlet-class>servlets.ManageUserAccServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemServlet</servlet-name>
        <servlet-class>servlets.ItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>servlets.CategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowMenuServlet</servlet-name>
        <servlet-class>servlets.ShowMenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserMenu</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminMenuServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageAdminServlet</servlet-name>
        <url-pattern>/ManageAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageUserAccServlet</servlet-name>
        <url-pattern>/manageUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemServlet</servlet-name>
        <url-pattern>/item</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowMenuServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/500.jsp</location>
    </error-page>
</web-app>
